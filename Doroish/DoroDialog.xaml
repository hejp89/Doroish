<ContentDialog
    x:Class="Doroish.DoroDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Doroish"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Doro"
    PrimaryButtonText="Add"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid Height="191">
        <TextBlock x:Name="textBlock" Margin="0,5,241,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" RenderTransformOrigin="0.007,0.465"/>
        <TextBox x:Name="titleTextBox" TextWrapping="Wrap" Text="" Margin="0,30,0,0" Height="7" VerticalAlignment="Top"/>

        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="0,67,0,0" TextWrapping="Wrap" Text="Duration" VerticalAlignment="Top"/>
        <TimePicker x:Name="durationTimePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,92,0,0" Width="270" Time="0:25:0"/>

        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="0,129,0,0" TextWrapping="Wrap" Text="Break" VerticalAlignment="Top"/>
        <TimePicker x:Name="breakTimePicker" HorizontalAlignment="Left" Margin="0,154,0,0" VerticalAlignment="Top" Time="0:5:0" Width="270"/>


    </Grid>
</ContentDialog>
